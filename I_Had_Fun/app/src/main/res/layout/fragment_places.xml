<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    android:background="@android:color/transparent"
    tools:context="com.androidkurs.micke.i_had_fun.PlacesFragment">


    <RelativeLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">


        <!-- TODO: Update blank fragment layout -->
     <android.support.v7.widget.AppCompatTextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/select_your_place"
         android:textColor="@color/tw__solid_white"
         android:layout_centerHorizontal="true"
         android:textAlignment="center"
         />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/placesRecycler"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="52dp"
            android:background="@null"


            >

        </android.support.v7.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/placesRecycler"
            android:gravity="center_horizontal"
            android:layout_marginTop="29dp">

            <Button
                android:id="@+id/happybutton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="25dp"
                android:layout_toStartOf="@+id/happierbutton"
                android:layout_weight="1"
                android:background="@drawable/happy1" />

            <Button
                android:id="@+id/happierbutton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="25dp"
                android:layout_toStartOf="@+id/veryhappybutton"
                android:layout_weight="1"
                android:background="@drawable/happy2" />


            <Button
                android:id="@+id/veryhappybutton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="25dp"
                android:layout_toStartOf="@+id/happiestbutton"
                android:layout_weight="1"
                android:background="@drawable/happy3" />

            <Button
                android:id="@+id/happiestbutton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:background="@drawable/happy4" />


        </RelativeLayout>

        <Button
            android:id="@+id/postTweetBtn"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:text="Tweet it!"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/relativeLayout"
            android:layout_centerHorizontal="true"
            android:textColor="@color/tw__solid_white"
            style="@style/Base.Widget.AppCompat.Button.Borderless"/>


    </RelativeLayout>

</FrameLayout>
