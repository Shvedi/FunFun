<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    android:background="@android:color/transparent"
    tools:context="com.androidkurs.micke.i_had_fun.PlacesFragment">

<LinearLayout
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@android:color/transparent">
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- TODO: Update blank fragment layout -->
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/appCompatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_your_place"
                android:textAlignment="center"
                android:textColor="@color/tw__solid_white"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/placesRecycler"
                android:layout_width="300dp"
                android:layout_height="350dp"
                android:background="@null"
                android:layout_margin="16dp"

                android:layout_below="@+id/appCompatTextView"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp">

            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- TODO: Update blank fragment layout -->
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textHowWasItw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/how_was_it"
                android:textAlignment="center"
                android:textColor="@color/tw__solid_white"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="67dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <Button
                    android:id="@+id/happybutton"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="25dp"
                    android:layout_toStartOf="@+id/happierbutton"
                    android:layout_weight="1"
                    android:background="@drawable/happy1" />

                <Button
                    android:id="@+id/happierbutton"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="25dp"
                    android:layout_toStartOf="@+id/veryhappybutton"
                    android:layout_weight="1"
                    android:background="@drawable/happy2" />


                <Button
                    android:id="@+id/veryhappybutton"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="25dp"
                    android:layout_toStartOf="@+id/happiestbutton"
                    android:layout_weight="1"
                    android:background="@drawable/happy3" />

                <Button
                    android:id="@+id/happiestbutton"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:background="@drawable/happy4" />

            </LinearLayout>






            <Button
                android:id="@+id/postTweetBtn"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="160dp"
                android:layout_height="40dp"


                android:text="Tweet it!"
                android:textColor="@color/tw__solid_white"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="87dp" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
 




   

</FrameLayout>
